{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "types": [],

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo.lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
